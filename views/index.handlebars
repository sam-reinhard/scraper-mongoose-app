<header>
    <h1>The Onion (Scraper)</h1>
</header>
<div class="container">
    <div class="row">
        <div class="col-md-3"></div>

        <div class="col-md-3 text-center">
            <button type="button" class="btn btn-dark" id="scrape-button">Scrape</button>
        </div>

        <div class="col-md-3 text-center">
            <button type="button" class="btn btn-dark" id="clear-button">Clear Articles</button>
        </div>

        <div class="col-md-3"></div>
    </div>
    {{#each articles}}
    <div class="row">
        <div class="col-md-2"></div>

        <div class="col-md-8" id="articles" data-id="{{_id}}">
            <h2>
                <a href="{{link}}">{{title}}</a>
            </h2>
            <p>{{summary}}</p>
            <div class="text-center" id="article-buttons">
                <button type="button" class="btn btn-dark" id="comment-button">Comment</button>
                <button type="button" class="btn btn-dark" id="save-button">Save</button>
            </div>
            <div id="comment-modal" class="modal">
                <div class="modal-content">
                    <span class="close">&times;</span>
                    <form>
                        <div class="form-group">
                            <label for="comment-title">Title</label>
                            <input type="text" class="form-control" id="comment-title" placeholder="name@example.com">
                        </div>
  
                        <div class="form-group">
                            <label for="comment-body">Comment</label>
                            <textarea class="form-control" id="comment-body" rows="3"></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary" id="comment-submit">Submit</button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-2"></div>
    </div>
    {{/each}}
</div>